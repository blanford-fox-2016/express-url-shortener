extends layout

block content
  h1= title
  p Welcome to #{title}
  br
  br
  form(action="/urls", method="post", name="form_url", class="col s12")
    .row
      .input-field.col.s4.col.s4
      input(type="text", name="input_url", placeholder="Paste a link to shorten it", class="col s4 col s4")
      br
    .row
      .col.s4.col.s4
      if error
        p.error.col.s4.col.s4 #{error}
      else
        p
    .row
      .input-field.col.s12
      input(type="submit", value="Shorten", class="btn waves-effect waves-light")
